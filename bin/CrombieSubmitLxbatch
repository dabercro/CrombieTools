#!/bin/bash

fresh=$1

if [ "$CMSSW_BASE" = "" ]
then
    echo "Require you to be cmsenv somewhere"
    exit 1
fi

if [ "$fresh" = "fresh" ]
then
    if [ -d $CrombieTempDir ]
    then
        rm $CrombieTempDir/*.root 2> /dev/null
    fi
fi

if [ ! -d bout ]
then
    mkdir bout
fi

source CrombieSlimmingConfig.sh

export haddFile=$CrombieTempDir/myHadd.txt

if [ "$fresh" != "resub" ]
then
    $CROMBIEPATH/scripts/CrombieDumpFileList.sh eos
fi

ranOnFile=0
    
if [ "$fresh" != "hadd" ]
then
    rootNames=`ls $CrombieTempDir/$CrombieFileBase\_*_*.txt | sed 's/.txt/.root/'`
    for outFile in $rootNames
    do
        if [ ! -f $outFile ]
        then
            echo Making: $outFile
            command="bsub -q $CrombieQueue -n $CrombieNBatchProcs -o bout/out.%J $CROMBIEPATH/scripts/CrombieDoJob.sh $outFile"
            if [ "$fresh" = "test" ]
            then
                echo $command
            else
                $command
            fi
            ranOnFile=1
        fi
    done
else
    echo "Going directly to hadd step."
fi

if [ "$ranOnFile" -eq 0 ]
then
    cat $haddFile | xargs -n2 -P$CrombieNLocalProcs $CROMBIEPATH/scripts/haddArgs.sh 
    echo "All files merged!"
fi
