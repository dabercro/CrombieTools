#! /bin/bash

fresh=$1

if [ "$CMSSW_BASE" = "" ]
then
    echo "CMSSW_BASE not set. Make sure to cmsenv someplace that you want the jobs to use"
    exit
fi

if [ ! -d bout ]
then
    mkdir bout
fi

source CrombieSlimmingConfig.sh

export haddFile=$CrombieTempDir/myHadd.txt

$CROMBIEPATH/scripts/CrombieDumpFileList.sh eos

rootNames=`ls $CrombieTempDir/$CrombieFileBase\_*_*.txt | sed 's/.txt/.root/'`
ranOnFile=0
    
for outFile in $rootNames
do
    if [ ! -f $outFile -o "$fresh" = "fresh" ]
    then
        echo Making: $outFile
        command="bsub -q $CrombieQueue -n $CrombieNumberProcs -o bout/out.%J $CROMBIEPATH/scripts/CrombieDoJob.sh $CMSSW_BASE $outFile"
        if [ "$fresh" = "test" ]
        then
            echo $command
        else
            $command
        fi
        ranOnFile=1
    fi
done

if [ "$ranOnFile" -eq 0 ]
then
    cat $haddFile | xargs -n2 -P6 $CROMBIEPATH/scripts/haddArgs.sh 
    echo "All files merged!"
fi
